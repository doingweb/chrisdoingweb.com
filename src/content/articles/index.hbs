---
title: Articles
layout: site.hbs
---
{{#each pages}}
  <article>
    <header>
      <h1><a href="/{{basename}}">{{data.title}}</a></h1>
      <p class="date"><span>{{data.date}}</span></p>
    </header>
    <section class="content">
      {{md src}}
      <a href="/{{basename}}">more</a>
    </section>
  </article>
{{/each}}

<nav>
  <!-- TODO: Pagination.  -->
  {{#if previous}}
    <a href="{{previous.path}}">Newer</a>
  {{else}}
    <a href="/archive/">Archives</a>
  {{/if}}
  {{#if next}}
    <a href="{{next.path}}">Next page</a>
  {{/if}}
</nav>
